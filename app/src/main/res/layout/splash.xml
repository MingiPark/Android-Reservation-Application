<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_salon_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/splashScreenImage"
        />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="이츠 헤어"
    android:gravity="center"
    android:textSize="35dp"
    android:fontFamily="@font/font1"
    app:layout_constraintTop_toBottomOf="@id/splashScreenImage"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="15dp"
    android:textColor="#000"
    android:id="@+id/splashLogo1"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hair Salon"
        android:gravity="center"
        android:textSize="40dp"
        android:fontFamily="@font/font1"
        app:layout_constraintTop_toBottomOf="@id/splashLogo1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:id="@+id/splashLogo2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>